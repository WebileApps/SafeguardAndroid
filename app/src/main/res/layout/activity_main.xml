<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="Safe Guard Demo"
        android:textSize="24sp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCheckRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Check Root Status" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCheckDeveloper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Check Developer Options" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCheckNetwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Check Network Security" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCheckMalware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Check Malware/Tampering" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCheckScreenMirroring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Check Screen Mirroring" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAppSpoofing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Check App Spoofing" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnKeyLoggerDetection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Check Key Logger Detection" />
      </LinearLayout>
    </ScrollView>
</LinearLayout>
